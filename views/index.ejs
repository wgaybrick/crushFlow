<div id="wrapper">

  <div id="header">
    <img src="images/logo.png">
  </div>
  
  <div id="new_crush_button">
    <img id="speech-bubble" src="images/speech_bubble.png" />
    <img id="post" src="images/post.png" />
  </div>
  
  <img id="small-heart" src="images/small_heart.png" />
  
  
  <div id="profile-button">
    <img id="thought-bubble" src="images/thought_bubble.png" />
    <a href="#"><img id="profile" src="images/profile.png" /></a>
  </div>
  
  <img id="big-heart" src="images/big_heart.png" />
  
  <div id="posts">
    <div id="new_crush_box" style="display:none">

      <input id="new_post_title" class="defaultText" value="Title" alt="Title"
        name="post[title]"/>
      <textarea id="new_post_body" class="defaultText"
        alt="omg on cross campus" name="post[content]">omg on cross campus</textarea>
      <button id="submit_post">Submit!</button>

    </div>
  
    <div class="postbox" style="display:none">
      <h2 class="post_title"></h2>
      <p class="post_body"></p>
      <div class="post_time"></div>
    </div>
  
    <% for ( var i = 0; i < posts.length; i++ )  { %>
  
      <div class="postbox">
        <h2 class="post_title"><%= posts[ i ].title %></h2>
        <p class="post_body"><%= posts[ i ].content %></p>
        <div class="post_time"><%= posts[ i ].date_display() %></div>
      </div>
  
  
    <% } %>
  </div>

  <img id="puppy" src="images/puppy.png" />

  <div id="footer">&copy; FaceCrush 2011 </div>
  
</div>



